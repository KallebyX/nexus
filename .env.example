# ==================================
# NEXUS FRAMEWORK - ENVIRONMENT VARIABLES
# ==================================
# Copy this file to .env and fill with your values
# NEVER commit .env to version control!

# ==================================
# APPLICATION
# ==================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# ==================================
# DEPLOYMENT URLS
# ==================================
STAGING_URL=https://staging.yourapp.com
PRODUCTION_URL=https://yourapp.com

# ==================================
# DATABASE - PostgreSQL
# ==================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nexus_db

# ==================================
# REDIS
# ==================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ==================================
# MONGODB (Optional)
# ==================================
MONGODB_URL=mongodb://localhost:27017/nexus

# ==================================
# AUTHENTICATION & SECURITY
# ==================================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ==================================
# CORS
# ==================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================================
# EMAIL - SMTP
# ==================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Nexus App <noreply@yourapp.com>"

# ==================================
# TWILIO (SMS & WhatsApp)
# ==================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890

# ==================================
# PUSH NOTIFICATIONS
# ==================================
# Generate VAPID keys: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@yourapp.com

# ==================================
# PAYMENTS - STRIPE
# ==================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================================
# PAYMENTS - MERCADOPAGO
# ==================================
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
PIX_KEY=your_pix_key
PIX_RECIPIENT_NAME=Your Business Name

# ==================================
# AI - OPENAI
# ==================================
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# ==================================
# AI - OPENROUTER (Optional)
# ==================================
OPENROUTER_API_KEY=your_openrouter_api_key

# ==================================
# SUPABASE (Optional)
# ==================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# ==================================
# SLACK NOTIFICATIONS
# ==================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_GENERAL_CHANNEL=#general
SLACK_ALERTS_CHANNEL=#alerts
SLACK_DEPLOYMENTS_CHANNEL=#deployments

# ==================================
# DISCORD NOTIFICATIONS
# ==================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# ==================================
# DOCKER REGISTRY
# ==================================
DOCKER_REGISTRY=docker.io
DOCKER_REGISTRY_USERNAME=your_dockerhub_username
DOCKER_REGISTRY_TOKEN=your_dockerhub_token

# ==================================
# MONITORING & LOGGING
# ==================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# ==================================
# RATE LIMITING
# ==================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# SESSION
# ==================================
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_MAX_AGE=86400000

# ==================================
# FEATURES FLAGS
# ==================================
ENABLE_API_DOCS=true
ENABLE_METRICS=true
ENABLE_ANALYTICS=false

# ==================================
# TESTING
# ==================================
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/nexus_test

# ==================================
# DEVELOPMENT
# ==================================
DEBUG=nexus:*
VERBOSE_LOGGING=false
